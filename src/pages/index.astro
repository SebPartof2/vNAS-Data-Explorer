---
import Layout from '../layouts/Layout.astro';
import { fetchArtccList } from '../lib/api';

const artccs = await fetchArtccList();
---

<Layout title="Home">
  <div class="space-y-8">
    <!-- Hero Section -->
    <section class="text-center py-12">
      <h1 class="text-4xl font-bold text-radar-100 mb-4">vNAS Data Explorer</h1>
      <p class="text-radar-300 text-lg max-w-2xl mx-auto">
        Explore comprehensive VATSIM facility data including positions, configurations,
        video maps, transceivers, and more. Select a facility to begin.
      </p>
    </section>

    <!-- Facility Selector -->
    <section class="bg-radar-800 rounded-lg border border-radar-600 p-6">
      <h2 class="text-xl font-semibold text-radar-100 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-blip-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
        </svg>
        Select ARTCC Facility
      </h2>

      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3">
        {artccs.map((artcc) => (
          <a
            href={`/facility/${artcc.id}`}
            class="bg-radar-700 hover:bg-radar-600 border border-radar-600 hover:border-blip-500 rounded-lg p-4 text-center transition-all duration-200 group"
          >
            <span class="text-2xl font-bold text-blip-500 group-hover:text-blip-400 block">
              {artcc.id}
            </span>
            <span class="text-xs text-radar-400 mt-1 block truncate">
              {artcc.name.replace(' Center', '')}
            </span>
          </a>
        ))}
      </div>
    </section>

    <!-- Features Overview -->
    <section class="grid md:grid-cols-3 gap-6">
      <div class="bg-radar-800 rounded-lg border border-radar-600 p-6">
        <div class="w-10 h-10 bg-radar-700 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-5 h-5 text-blip-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-radar-100 mb-2">Complete Data</h3>
        <p class="text-radar-400 text-sm">
          Access all vNAS API data including facility hierarchies, positions, STARS/ERAM configurations, and more.
        </p>
      </div>

      <div class="bg-radar-800 rounded-lg border border-radar-600 p-6">
        <div class="w-10 h-10 bg-radar-700 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-5 h-5 text-blip-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-radar-100 mb-2">Printable Reports</h3>
        <p class="text-radar-400 text-sm">
          Generate printer-friendly reports for positions, frequencies, and configurations.
        </p>
      </div>

      <div class="bg-radar-800 rounded-lg border border-radar-600 p-6">
        <div class="w-10 h-10 bg-radar-700 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-5 h-5 text-blip-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-radar-100 mb-2">Search & Filter</h3>
        <p class="text-radar-400 text-sm">
          Quickly find positions, video maps, and transceivers with built-in search functionality.
        </p>
      </div>
    </section>
  </div>
</Layout>
